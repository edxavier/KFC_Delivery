<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ni.maestria.m8.kfcdelivery.SendActivity">

    <TextView android:text="Formulario de envio" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textView5"
        android:paddingTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Nombre de contacto"
                android:ems="10"
                android:textColor="@color/wallet_highlighted_text_holo_dark"
                android:drawableLeft="@drawable/ic_social_person"
                android:id="@+id/txtNombre_envio"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Numero de contacto"
                android:textColor="@color/wallet_highlighted_text_holo_dark"
                android:ems="10"
                android:drawableLeft="@drawable/ic_hardware_phone_android"
                android:id="@+id/txt_telefono"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:hint="Direccion para el envio"
                android:ems="10"
                android:layout_marginTop="8dp"
                android:textColor="@color/wallet_highlighted_text_holo_dark"
                android:drawableLeft="@drawable/ic_communication_location_on"
                android:id="@+id/txt_direccion_envio"
                />
        </LinearLayout>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar pedido"

            android:layout_marginTop="8dp"
            android:id="@+id/btn_terminar"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


</RelativeLayout>
